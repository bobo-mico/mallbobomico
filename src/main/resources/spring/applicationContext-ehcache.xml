<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	 http://www.springframework.org/schema/context 
	 http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!-- 工厂注入 -->
    <bean id="ehCacheCacheManager" class="com.bobomico.ehcache.manager.EhCacheManager" p:cache-manager-ref="ehcacheFactory" >
    </bean>

    <bean id="ehcacheFactory" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" p:config-location="classpath:ehcache/ehcache-rmi-1000.xml" />

<!--    <bean id="customService" class="com.bobomico.pojo.UserServiceImpl">-->
<!--        <property name="vieMallCacheManager" ref="vieMallCacheManager"></property>-->
<!--    </bean>-->

    <bean id="vieMallCacheManager" class="com.bobomico.ehcache.MicoCacheManager" >
        <property name="cacheManager" ref="ehCacheCacheManager"></property>
    </bean>

</beans>
